{
  "app_name": "task_breakdown",
  "agent_type": "llm",
  "agent": {
    "name": "task_breakdown_agent",
    "model": "gemini-2.5-flash",
    "description": "Breaks down complex tasks into structured action items",
    "instruction": "You are a task breakdown specialist. When given a complex task or project, break it down into clear, actionable steps with priorities and time estimates. Return the information in the specified JSON format.",
    "response_schema": {
      "type": "object",
      "properties": {
        "project_title": {
          "type": "string",
          "description": "Title of the overall project or task"
        },
        "summary": {
          "type": "string",
          "description": "Brief summary of what needs to be accomplished"
        },
        "tasks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "task_id": {
                "type": "integer",
                "description": "Unique task identifier"
              },
              "title": {
                "type": "string",
                "description": "Task title"
              },
              "description": {
                "type": "string",
                "description": "Detailed task description"
              },
              "priority": {
                "type": "string",
                "enum": ["high", "medium", "low"],
                "description": "Task priority level"
              },
              "estimated_time": {
                "type": "string",
                "description": "Estimated time to complete (e.g., '2 hours', '1 day')"
              },
              "dependencies": {
                "type": "array",
                "items": {
                  "type": "integer"
                },
                "description": "List of task_ids that must be completed first"
              }
            },
            "required": ["task_id", "title", "priority"]
          },
          "description": "List of individual tasks"
        },
        "total_estimated_time": {
          "type": "string",
          "description": "Overall project time estimate"
        }
      },
      "required": ["project_title", "summary", "tasks"]
    }
  },
  "tools": []
}

