# ADK Agent Manager - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Google Cloud / Vertex AI Configuration
GOOGLE_GENAI_USE_VERTEXAI=false
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=agent_def/sa/your-service-account-key.json

# Optional: Weather API (for real weather data in get_weather tool)
WEATHER_API_KEY=your_weather_api_key_here

# Optional: Search API (for real web search results in WebSearchTool)
SEARCH_API_KEY=your_search_api_key_here
SEARCH_ENGINE=google

# Optional: MCP Server Configuration
PORT=8000
TRANSPORT=http